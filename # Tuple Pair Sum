def tuple_pair_sum(my_tuple):
    new_list = []
    for num in range(len(my_tuple)):
        for i in range(num + 1, len(my_tuple)):
            if (my_tuple[num] + my_tuple[i]) % 2 == 0:
                new_list.append((my_tuple[num], my_tuple[i]))
    return new_list

m_tuple = (1,2,3,4,5,6)
result = tuple_pair_sum(m_tuple)
print(result)
